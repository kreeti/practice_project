<div class="transaction-form">
  <h2 align="center"><%= t(:edit, name: "transaction") %></h2>
  <%= form_for @transaction, html: { multipart: true ,  class:"form-group" } do |f| %>
    <%= render 'form', f: f %>
    <div class="form-group">
      <div class="offset-sm-8 col-sm-10">
        <%= link_to t(:cancel), :back, class: "btn btn-light btn-outline-dark" %>
        <%= f.submit t(:update), class: "btn btn-primary", data: { disable_with: t(:updating) } %>
     </div>
    </div>
  <% end %>
</div>
