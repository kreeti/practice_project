<div class="head">
  <h1><%= t('.account') %></h1>
</div>
<div class="user">
  <table>
    <tr>
      <th><%= t(:id)%></th>
      <th><%= t(:name) %></th>
      <th><%= t(:status) %></th>
      <th></th>
    </tr>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.id %></td>
        <td><%= link_to account.name, transactions_path(account_id: account.id) %></td>
        <td><%= account.active ? t(:active) : t(:inactive) %></td>
        <td><%= link_to '', edit_account_path(account), title: "Edit", class: "fa fa-pencil-square-o fa-2x" %></td>
        <td>
          <% unless account.transactions.present? %>
            <%= link_to '', account_path(account.id), method: :delete, data: { confirm: t(:sure, name: "account") }, title: "Delete", class: "fa fa-trash fa-2x" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
