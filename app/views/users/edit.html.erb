<div class="formstyle">
  <h2 align="center"><%= t(:edit, name: "user")  %></h2>
  <%= render 'shared/errors', object: @user %>
  <%= form_for @user do |f| %>
    <%= render 'form', f: f %>
    <div class="form-group">
      <div class="text-right">
        <%= link_to t(:cancel), :back, class: "btn btn-light btn-outline-dark" %>
        <%= f.submit t(:update), class: "btn btn-primary",  data: { disable_with: t(:updating) } %>
      </div>
    </div>
  <% end %>
</div>
